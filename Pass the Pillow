class Solution:
    def passThePillow(self, n: int, time: int) -> int:
        i = 0
        j = 1
        notreached = True

        while i < time:
            i += 1
            if notreached:
                j += 1
                if j == n:
                    notreached = not notreached
            else:
                j -= 1
                if j == 1:
                    notreached = not notreached

        return j

class Solution {
    public int maxSubArray(int[] nums) {
        int max_sums = nums[0];
        int s = 0;   

        for(int i = 0; i < nums.length; i++){
            s += nums[i];

            if(s > max_sums){
                max_sums = s;
            }

            if(s < 0){   
                s = 0;
            }
        }

        return max_sums;
    }
}
